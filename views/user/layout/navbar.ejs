<style>
/* For small screens */
@media (max-width: 576px) {
    /* Hide navbar links except search, wishlist, and login */
    .navbar-nav:not(.custom-navbar-cta) {
        display: none; /* Hide all standard navigation links */
    }

    /* Show search bar, wishlist, and login stacked vertically */
    .Search {
        width: 100%;
        margin-bottom: 1rem;
    }

    .custom-navbar-cta {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        width: 100%;
    }

    .custom-navbar-cta .nav-link {
        text-align: center;
        flex: 1;
    }
}

.GoldenTop {
    width: 100%; /* Full width of the screen */
    padding: 10px 20px; /* Add spacing inside */
    text-align: center; /* Center-align the text */
    background-color: #f8d282; /* Optional: Set background color */
    color: #000; /* Text color for visibility */
    box-sizing: border-box; /* Ensure padding is included in the width */
}

.GoldenTop p {
    margin: 0; /* Remove default margins */
    font-size: 1.2rem; /* Base font size */
    line-height: 1.5; /* Proper line spacing */
    word-wrap: break-word; /* Prevent text from breaking out */
    white-space: normal; /* Allow text wrapping */
}

/* Media query for smaller screens */
@media (max-width: 576px) {
    .GoldenTop {
        padding: 8px 15px; /* Reduce padding for smaller devices */
    }
    .GoldenTop p {
        font-size: 1rem; /* Adjust font size for mobile */
    }
}

</style>



<body>
    <div class="GoldenTop">
        <p class="italianno-regular">Don't Miss Out on the Gold Rush. <span class="star-outline">&#9734;</span> Enjoy
            Fantastic Prices.......</p>
    </div>
    <nav class="custom-navbar navbar navbar-expand-md navbar-dark bg-dark" aria-label="navigation bar">
        <div class="container">
            <!-- Brand Logo -->
            <a class="navbar-brand italianno-regular" href="/home">LuxGems<span>.</span></a>
            
            <!-- Navbar Toggler for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Content -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Search Bar -->
                <div class="Search mb-3 mb-md-0 ms-auto">
                    <form method="GET" action="">
                        <input type="text" name="query" placeholder="Search for radiance" class="form-control">
                        <button type="submit" class="btn btn-white mt-2 searchBtn"><i class="fas fa-search"></i></button>
                    </form>
                </div>

                <!-- Navigation Links -->
                <ul class="navbar-nav ms-auto d-none d-md-flex">
                    <li class="nav-item active"><a class="nav-link" href="/home">Home</a></li>
                    <li><a class="nav-link" href="/all-products">Shop</a></li>
                    <li><a class="nav-link" href="#">About us</a></li>
                    <li><a class="nav-link" href="#">Contact us</a></li>
                </ul>

                <!-- Wishlist, Cart, and User -->
                <ul class="custom-navbar-cta navbar-nav ms-auto">
                    <li><a class="nav-link" href="/Wishlist"><i class="fas fa-heart" style="color: white"></i></a></li>
                    <li><a class="nav-link" href="/cart"><i class="fas fa-shopping-bag" style="color: white"></i></a></li>

                    <% if (user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user-circle" style="color: white"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/profile">Profile</a>
                                <form id="logout-form" action="/logout" method="POST" style="display: none;"></form>
                                <a class="dropdown-item" href="#" id="logout-link">Logout</a>
                            </div>
                        </li>
                    <% } else { %>
                        <li><a class="nav-link" href="/login"><i class="fa fa-user-circle" style="color: white"></i></a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</body>

<script>
    document.getElementById('logout-link').addEventListener('click', function (event) {
        event.preventDefault(); // Prevent default link behavior
        document.getElementById('logout-form').submit(); // Submit the form
    });
</script>
