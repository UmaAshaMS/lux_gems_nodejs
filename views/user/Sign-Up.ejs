<script>
    document.getElementById('signup-form').addEventListener('submit',(e)=>{
        e.preventDefault();
        const emailPattern = /^(?!.\.\d)(?=[a-zA-Z0-9._%+-][a-zA-Z]{3,}\d*@)[a-zA-Z0-9._%+-]+@[a-z]{3,}\.[a-z]{2,}$/i;
        const passwordPattern = /^(?=.*[a-zA-Z])(?=.*\d)(?=.*[\W_]).{6,}$/;
        const phoneNumberPattern = /^\d{10}$/;

        const userEmail=document.getElementById('userEmail').value;
        const userPhone =document.getElementById('userPhone').value;
        const userPassword =document.getElementById('userPassword').value;
        const confirmPassword =document.getElementById('confirmPassword').value;
        if(!userEmail || userEmail=== null || !emailPattern.test(userEmail))
        {
            alert("email id is not in required format")
        }
        else if(!userPassword || userPassword=== null || !passwordPattern.test(userPassword))
        {
            alert("Password is not in required format")
        }
        else if(!confirmPassword || confirmPassword=== null || userPassword !== confirmPassword)
        {
            alert("Password and confirm passsword is mismatching")
        }
        else if(!userPhone || userPhone=== null || !phoneNumberPattern.test(userPhone))
        {
            alert("Phone number is not in required format")
        }
        else
        {
            document.getElementById('signup-form').submit()
        }
    })
</script>