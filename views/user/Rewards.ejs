<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 1200px;
        margin: auto;
    }

    .page-title {
        text-align: center;
        margin-bottom: 20px;
    }

    .rewards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .reward-card {
        background-color: #ffffff;
        border: 1px solid #dddddd;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

    .reward-card:hover {
        transform: scale(1.02);
    }

    .reward-title {
        font-size: 18px;
        margin: 0;
        margin-bottom: 10px;
    }

    .reward-description {
        font-size: 14px;
        margin-bottom: 15px;
    }

    .reward-details {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .coupon-code {
        font-weight: bold;
        background-color: #f0f0f0;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .copy-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .copy-button:hover {
        background-color: #0056b3;
    }
    .breadcrumbs {
        font-size: 16px;
        margin-bottom: 20px;
        color: #555;
    }

    .breadcrumb-item a {
        color: #007bff;
        text-decoration: none;
    }
</style>

<%- include('./layout/header') %>
<%- include('./layout/navbar') %>
<%- include('./layout/category_navbar') %>


<div class="breadcrumbs mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/profile" style="text-decoration:none">Your Account</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Your Rewards</li>
    </ol>
</div>

<div class="container">
    <h1 class="page-title">Available Rewards</h1>
    <div class="rewards-grid">
        <% coupons.forEach(coupon => { %>
            <!-- Reward Card -->
            <div class="reward-card">
                <h2 class="reward-title"><strong><%= coupon.couponCode %></strong></h2>
                <% if(coupon.discountType === 'Percentage') { %>
                    <p class="reward-description"> Coupon offers <%= coupon.discount %> % for all orders above Rs : <%= coupon.minimumAmount %>.
                       <br> <%=coupon.usageLimit %> time usage Only.
                    
                    </p>
                <% } else { %>
                    <p class="reward-description">Coupon offers a discount of Rs: <%= coupon.discount %> for all orders above <%= coupon.minimumAmount %> Rs.
                        <br><%=coupon.usageLimit %> time usage Only.</p>
                <% } %>

                <div class="reward-details">
                    <span class="coupon-code" id="coupon<%= coupon.id %>"><%= coupon.couponCode %></span> <!-- Make sure to use unique IDs -->
                    <button class="copy-button" onclick="copyToClipboard('coupon<%= coupon.id %>')">Copy Code</button>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<script>

function copyToClipboard(id) {
    const couponCodeElement = document.getElementById(id);
    const couponCode = couponCodeElement.textContent;

    navigator.clipboard.writeText(couponCode).then(() => {
        Swal.fire({
            icon: 'success',
            title: 'Success', 
            text: 'Coupon code copied to clipboard!', 
            confirmButtonText: 'OK'
        });
    }).catch(err => {
        console.error('Failed to copy: ', err);
        Swal.fire({
            icon: 'error', 
            title: 'Error',
            text: 'Failed to copy coupon code.',
            confirmButtonText: 'OK'
        });
    });
}

</script>
