<%- include('./layout/header') %>
<%- include('./layout/navbar') %>
<%- include('./layout/category_navbar') %>


<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        background-color: #f4f4f4;
    }

    .cart-container {
        max-width: 800px;
        margin: 0 auto;
        margin-top: 3%;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        font-weight: 600;
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        padding: 15px;
        border-bottom: 1px solid #eaeaea;
        align-items: center;
    }

    .cart-item:last-child {
        border-bottom: none;
    }

    .cart-item img {
        width: 120px;
        border-radius: 8px;
    }

    .cart-item-info {
        flex-grow: 1;
        margin-left: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .cart-item-info h4 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .cart-item-info p {
        margin: 5px 0;
        font-size: 0.9rem;
        color: #555;
    }

    .cart-item-quantity {
        display: flex;
        align-items: center;
    }

    .cart-item-quantity button {
        background-color: white;
        color: black;
       
        border-radius: 4px;
        padding: 5px 10px;
        cursor: pointer;
        font-size: 1rem;
        margin: 0 10px;
    }

    .cart-item-quantity button:hover {
        background-color: white;
    }

    .cart-item-actions {
        display: flex;
        flex-direction: column;
    }

    .cart-item-actions button {
        background-color: white;
        color: #dc3545 ;
        border: none;
        border-radius: 4px;
        padding: 8px 12px;
        cursor: pointer;
        margin-bottom: 10px;
    }

    .cart-item-actions button:hover {
        background-color: #c82333;
    }

    .cart-summary {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1.2rem;
        font-weight: 600;
    }

    .checkout-btn {
        background-color: #28a745;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1.1rem;
        transition: background-color 0.3s;
    }

    .checkout-btn:hover {
        background-color: #218838;
    }

    .empty-cart {
        text-align: center;
        padding: 50px 0;
        font-size: 1.5rem;
        color: #888;
    }

</style>

<div class="cart-container">
    <h1>Your Wishlist</h1>

    <% if (wishlist && wishlist.product.length > 0) { %>
        <% wishlist.product.forEach(item => { %>
            <div class="cart-item">
                <img src="<%= item.productImage[0].replace(/\\/g, '/') %>" alt="Product Image">
                <div class="cart-item-info">
                    <h4><%= item.productId.productName %></h4>
                    <p><i class="fas fa-rupee-sign"></i> <%= item.productPrice.toFixed(2) %></p>
                </div>
               
                <div class="cart-item-actions">
                    <button onclick="removeFromCart('<%= item.productId._id %>')">
                        <i class="fas fa-trash-alt"></i> 
                    </button>

                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="empty-cart">Your wishlist is empty.</div>
    <% } %>
</div>