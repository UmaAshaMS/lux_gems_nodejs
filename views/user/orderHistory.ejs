<%- include('./layout/header') %>
<%- include('./layout/navbar') %>
<%- include('./layout/category_navbar') %>

<style>
    h1 {
        text-align: center;
        color: #333;
    }

    .Orders {
        max-width: 800px;
        margin: 0 auto; 
        padding: 20px;
    }

    .order-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin: 10px 0;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex; 
        align-items: center; 
    }

    .order-image {
        flex-shrink: 0;
        margin-right: 20px; 
    }

    .order-card img {
        border-radius: 4px;
        max-width: 100px; 
        height: auto; 
        cursor: pointer;
    }

    .order-details {
        flex-grow: 1; 
        color: #555;
    }

    .order-details p, .order-details h4 {
        margin: 5px 0; 
    }

    .Orders a {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 15px;
        background-color: black;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .Orders a:hover {
        background-color: #caaf7a;
    }

    .order-status {
        font-weight: bold;
        color: #007bff; 
    }

    .cancel-order {
        margin-top: 5px;
        font-size: 0.9em;
        color: #dc3545; 
    }
   
</style>
<div class="breadcrumbs mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/profile" style="text-decoration:none">Your Account</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Your Orders</li>
    </ol>
</div>
<h4>Order History</h4>



<div class="Orders">
    <% if (orders.length === 0) { %>
        <p>You have no previous orders.</p>
    <% } else { %>
        <% orders.forEach(order => { %>
            <div class="order-card">
                <div class="order-image">
                    <img src="<%= order.items[0].productImage %>" alt="Product Image" class="productImage" data-product-id="<%= order.items[0].productId %>">
                </div>
                <div class="order-details">
                    <p><strong>Order ID:</strong> <%= order._id %></p>
                    <p><strong>Order Date:</strong> <%= order.createdAt.toDateString() %></p>
                    <p><strong>Total Amount:</strong> Rs <%= order.totalAmount.toFixed(2) %></p>
                    <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
                    <h4>Items:</h4>
                    <ul>
                        <% order.items.forEach(item => { %>
                            <li>
                                <strong><%= item.productName %></strong> - Rs<%= item.productPrice %>
                            </li>
                        <% }) %>
                    </ul>
                    <p class="order-status"><strong>Status:</strong> <%= order.status %></p> 
                    <a href="/orderConfirmed/<%= order._id %>">View Details</a>
                    <% if(order.status !== 'Cancelled' && order.status !== 'Delivered'){ %>
                    <form action="/cancelOrder/<%= order._id %>" method="POST" style="display:inline;">
                        <a <button type="submit" class="cancel-order">Cancel Order</button></a>
                    </form>
                    <% } %>
                    <% if(order.status === 'Delivered' ) { %>
                        <p>Delivered On: <%= order.expectedDeliveryDate %> </p>
                        <% if (order.returnWindowClosed) { %>
                            <span>Return window closed on: <%= order.formattedReturnDate %></span>
                        <% } else { %>
                        <form action="/returnOrder/<%= order._id %>" method="POST" style="display:inline;">
                            <a <button type="submit" class="return-order">Return Order</button></a>
                            <span>Return window open till <%= order.formattedReturnDate %></span>
                        </form>
                        <% } %>
                        <% } %>
                    <!-- <a class= 'link' href="/archiveOrder/<%= order._id %>">Archive</a> -->
                </div>
            </div>
        <% }) %>
    <% } %>
    <a href="/all-products">Continue Shopping</a>
</div>


<script>
    
    document.querySelectorAll('.productImage').forEach(function(image) {
    image.addEventListener('click', function(){
        const productId = this.getAttribute('data-product-id')
        window.location.href = '/productDetails/' + productId 
    })
})
    document.querySelectorAll('.cancel-order').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const form = this.closest('form');
            const actionUrl = form.action;

            // SweetAlert confirmation dialog
            Swal.fire({
                title: 'Are you sure?',
                text: 'You wonâ€™t be able to revert this!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(actionUrl, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire('Cancelled!', 'Your order has been canceled.', 'success').then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire('Error!', data.message, 'error');
                        }
                    })
                    .catch(error => {
                        Swal.fire('Error!', 'Failed to cancel the order. Please try again.', 'error');
                    });
                }
            });
        });
    });

</script>