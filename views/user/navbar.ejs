<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Italianno&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>

<body>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .GoldenTop {
            width: 100%;
            height: 25px;
            display: flex;
            background-color: #caaf7a;
            justify-content: center;
            align-items: center;
            padding-top: 1%;
        }

        .italianno-regular {
            font-family: "Italianno", cursive;
            font-weight: 600;
            font-size: large;
            color: black;
        }

        .navbar-brand {
            font-size: 30px;
            font-weight: 500;
            font-size: 42px;
            color: #caaf7a;
        }

        .star-outline {
            font-size: 18px;
            color: #000000;
        }

        .Search {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-left: 85px;
        }

        .Search form {
            display: flex;
            width: 100%;
        }

        .form-control {
            flex: 1;
            min-width: 200px;
            max-width: 500px;
        }

        .searchBtn {
            color: white;
            background-color: #000;
            border: none;
            padding: 0 10px;
        }

        .Nav-Bottom ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            background-color: rgb(207, 199, 199);
            font-family: 'Italianno', cursive;
            font-weight: 400;
            font-size: 22px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        }

        .Nav-Bottom ul li {
            margin: 10px 20px;
        }

        .Nav-Bottom ul li a {
            text-decoration: none;
            color: black;
            font-size: 18px;
        }

        .custom-navbar-nav {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .custom-navbar-cta {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 28px;
            }

            .Search {
                margin-left: 0;
                margin-top: 10px;
                width: 100%;
                justify-content: center;
            }

            .form-control {
                width: 100%;
            }

            .custom-navbar-nav,
            .custom-navbar-cta {
                flex-direction: column;
                align-items: flex-start;
            }

            .Nav-Bottom ul {
                flex-direction: column;
            }

            .Nav-Bottom ul li {
                margin-right: 0;
                margin-bottom: 15px;
            }
        }

        @media (max-width: 480px) {
            .navbar-brand {
                font-size: 24px;
            }

            .Search form {
                flex-direction: column;
            }

            .searchBtn {
                margin-top: 5px;
                width: 100%;
            }

            .Nav-Bottom ul {
                font-size: 16px;
            }

            .Nav-Bottom ul li a {
                font-size: 16px;
            }

            .Nav-Bottom ul li {
                margin-right: 0;
                margin-bottom: 10px;
            }
        }

        .nav-link {
            z-index: 10;
            /* Ensure it's above other elements if necessary */
        }

        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 28px;
            }

            .Search {
                margin-left: 0;
                margin-top: 10px;
                width: 100%;
                justify-content: center;
            }

            .Search form {
                flex-direction: column;
                /* Stack form fields vertically */
            }

            .form-control {
                width: 100%;
                margin-bottom: 5px;
                /* Add space between input and button */
            }

            .searchBtn {
                width: 100%;
                margin-top: 5px;
                /* Space below search button */
            }

            .custom-navbar-nav,
            .custom-navbar-cta {
                flex-direction: column;
                align-items: flex-start;
                margin-top: 10px;
            }

            .Nav-Bottom ul {
                flex-direction: column;
                align-items: center;
                /* Center the nav items */
            }

            .Nav-Bottom ul li {
                margin-right: 0;
                margin-bottom: 15px;
            }
        }
    </style>
    <div class="GoldenTop">
        <p class="italianno-regular">Don't Miss Out on the Gold rush. <span class="star-outline">&#9734</span> Enjoy
            Fantastic Prices.......</p>
    </div>
    <nav class="custom-navbar navbar navbar navbar-expand-md navbar-dark bg-dark" arial-label="navigation bar">

        <div class="container">
            <a class="navbar-brand italianno-regular" href="/user/home">LuxGems<span>.</span></a>
            <div class="collapse navbar-collapse" id="navbars">
                <div class='Search'>
                    <form method="GET" action="">
                        <input type="text" name="" placeholder="Search for radiance" class="form-control">
                        <button type="submit" class="btn btn-white mt-2 searchBtn"><i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <ul class="custom-navbar-nav navbar-nav ms-auto mb-2 mb-md-0">

                    <li class="nav-item active"><a class="nav-link" href="/user/home">Home</a></li>
                    <li><a class="nav-link" href="#">Shop</a></li>
                    <li><a class="nav-link" href="#">About us</a></li>
                    <li><a class="nav-link" href="#">Contact us</a></li>
                </ul>

                <ul class="custom-navbar-cta navbar-nav mb-2 mb-md-0 ms-5">

                    <li><a class="nav-link" href="cart.html"> <i class="fas fa-heart" style="color: white"></i></a></li>
                    <li><a class="nav-link" href="wishlist"><i class="fas fa-shopping-bag" style="color: white"></i></a>
                    </li>

                    <!-- Add if condition for login and profile -->
                    <% if (user) { %>
                        <!-- Show profile and logout options -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user-circle" style="color: white"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/profile">Profile</a>
                                <form id="logout-form" action="/user/logout" method="POST" style="display: none;">
                                    <!-- You might include CSRF token here if needed -->
                                </form>
                                <a class="dropdown-item" href="#" id="logout-link">Logout</a>
                            </div>
                        </li>
                        <% } else { %>
                            <!-- Show login option for users not logged in -->
                            <li><a class="nav-link" href="/user/login"><i class="fa fa-user-circle"
                                        style="color:white"></i></a></li>
                            <% } %>


                </ul>
            </div>
        </div>

    </nav>
    <div class=" Nav-Bottom">
        <ul>
            <% category.forEach((cat)=> { %>
                <li><a href="/user/productCategory/<%= cat._id %>">
                        <%= cat.name %>
                    </a></li>
                <% }) %>
                    <li><a href="404">Rings</a></li>
                    <li><a href="404">Weddings</a></li>
                    <li><a href="404">Giftings</a></li>
                    <li><a href="404">Birth Stones</a></li>
        </ul>
    </div>


</body>
<script>
    document.getElementById('logout-link').addEventListener('click', function (event) {
        event.preventDefault(); // Prevent default link behavior
        document.getElementById('logout-form').submit(); // Submit the form
    });

</script>