                    <div id="imagePreview" class="row">
                        <!-- Image previews will be appended here -->

                        <% if (product.productImage && product.productImage.length> 0) { %>
                            <% product.productImage.forEach(function(img, index) { %>
                                <% var formattedImgPath=img.replace(/\\/g, '/' ); %>
