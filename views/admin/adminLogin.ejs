<body>

    <style>
        .page-container {
            display: flex;
            min-height: 100vh;
            background-color: black;
        }

        .page-container h3 {
            text-align: center;
        }

        .page-container p {
            text-align: center;
        }

        .image-container {
            flex: 1;
            /* background-image: url('./public/pexels-photo-15185229.webp'); Image URL */
            background-size: cover;
            background-position: center;
            height: 100%;
            /* Full height */
        }



        .login-container {
            flex: 2;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, Helvetica, sans-serif;
            background-color: rgb(0, 0, 0);
            padding-top: 5px;

        }

        .login-container form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            border: 2px solid rgb(171, 135, 62);
            border-radius: 10px;
            padding: 10px;
            color: black;
            background-color: rgb(162, 165, 168);
            max-width: 400px;
            width: 100%;
            box-sizing: border-box;

        }
        .login-container input{
            padding: 0.6rem;
            border-radius: 5px;
            border: none;
            background-color: #eee;
            color: #333;
        }
        .italianno-regular {
            font-family: "Italianno", cursive;
            font-weight: 600;
            font-style: normal;
            font-size: large;
            color: black
        }

        .login-container p{
            font-size: 25px;
        }
        .login-container h1{
            font-size: 40px;
            text-align: center;
        }
    </style>


    <div class="page-container">

        <div class="login-container">
            <form action="/admin/adminLogin" method="post">
                <h1 class="italianno-regular">LuxGems</h1>
                <p class="italianno-regular">Admin Login</p>
                <input type="email" name="email" placeholder="Email Id:" required>
                <input type="password" name="password" placeholder="Password" required>

                <button type="submit" class="btn btn-dark rounded-pill">Login</button>

            </form>
        </div>
</body>

